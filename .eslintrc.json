{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "browser": true,
        "commonjs": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "rules": {
        "semi": [
            "warn",
            "always"
        ],
        "no-unused-vars": [
            "warn",
            {
                "vars": "all",
                "args": "none"
            }
        ]
    }
}
